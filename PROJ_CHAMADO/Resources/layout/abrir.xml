
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"    
    android:layout_height="match_parent">

    <TextView
        android:text="ID Usuário *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/c_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

     <TextView
        android:text="Departamento *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/c_dep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>
        
     <TextView
        android:text="Andar *"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/c_andar"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Sala *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/c_sala"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




   <TextView
        android:text="Tipo *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/sp_tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="Produto *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/c_prod"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/c_prod2"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="Descrição do problema *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/c_des"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/bt_cont"
        android:text="Continuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/c_canc"
        android:text="Cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--
    IDENTIFICACAO USUARIO

    PROBLEMA
    
    
    -->


</LinearLayout>
</ScrollView>